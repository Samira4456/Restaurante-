from produto_menu import menu_produtos
from fornecedor_menu import menu_fornecedores

def menu_principal():
    while True:
        print("\n" + "-=" * 30)
        print("               SISTEMA DE GESTÃO")
        print("-=" * 30)
        print("1 - Menu de Produtos")
        print("2 - Menu de Fornecedores")
        print("3 - Abrir sistema de Pratos (Flask)")
        print("s - Sair do programa")
        opcao = input("Escolha uma opção: ")

        if opcao == "1":
            menu_produtos()
        elif opcao == "2":
            menu_fornecedores()
        elif opcao == "3":
            print("\nPara iniciar o sistema de pratos, execute no terminal:\n")
            print("    flask run")
            print("\nOu, se estiver em ambiente Windows:\n")
            print("    set FLASK_APP=app.py && flask run")
            input("\nPressione Enter para voltar ao menu...")
        elif opcao.lower() == "s":
            print("Saindo do sistema. Até logo!")
            break
        else:
            print("Opção inválida. Tente novamente.")

if __name__ == "__main__":
    menu_principal()
